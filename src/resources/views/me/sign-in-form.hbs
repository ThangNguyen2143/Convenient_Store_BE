<div class="container mt-4">
    <div class="alert {{alert.type}}" role="alert" id="myAlert">
       {{ alert.message}}
    </div>
    <form action="" method="POST" class="needs-validation" novalidate>
        <h1 class="form-tittle">Đăng nhập</h1>
        <div class="form-group">
            <div class="col">
                <label for="emailCustom" class="lable">Địa chỉ email</label>
                <input type="email" class="form-control" id="emailCustom" name="email" placeholder="Nhập email đã đăng kí" required>
                <div class="invalid-tooltip">Vui lòng nhập email</div>
            </div>
        </div>
        <div class="form-group">
            <div class="col">
                <label for="passwdSignIn" class="lable">Mật khẩu</label>
                <input type="password" class="form-control" id="passwdSignIn" name="paswd" placeholder="Nhập mật khẩu" required>
                <div class="invalid-tooltip">Vui lòng nhập mật khẩu</div>
            </div>
        </div>
        <div class="form-check">
            <input type="checkbox" id="rememberMe" class="form-check-input">
            <label for="rememberMe" class="form-check-label">Ghi nhớ thông tin đăng nhập</label>
        </div>
        <button class="btn btn-success btn-block my-3">Đăng nhập</button>
        
        <div class="form-help">
            <p>Quên mật khẩu
                <a href="#" class="form-link-help">Trợ giúp</a>
            </p>
        </div>
    </form>
</div>