 <div class="row justify-content-center">  
    <form method="POST" action="/detail/stored" enctype="multipart/form-data">
        <h2 class="text-center">Thêm sản phẩm mới</h2>
        <div class="form-group">
            <label for="name" class="lable">Tên sản phẩm</label>
            <input type="text" class="form-control" id="name" name="name" placeholder="Nhập tên sản phẩm">
            <p class="nameError"></p>
        </div>
        <div class="form-group">
            <label for="description" class="lable">Mô tả sản phẩm</label>
            <textarea class="form-control" id="description" name="description" rows="3" ></textarea>
            <p class="desError"></p>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
               <label for="price" class="lable">Giá tiền</label>
                <input type="number" class="form-control" id="price" name="price" placeholder="Nhập giá tiền">
                <p class="priceError"></p>  
            </div>
            <div class="form-group col-md-6">
                <label for="stored" class="lable">Số lượng nhập</label>
                <input type="number" class="form-control" id="stored" name="stored" placeholder="Số lượng sản phẩm">
                <p class="storedError"></p>
            </div>
        </div>
        {{!-- <div class="form-group">
            <label for="image" class="lable">Up ảnh</label>
            <input type="text" class="form-control" id="image" name="image" placeholder="đường dẫn ảnh">
            <p class="imgError"></p>
        </div> --}}
        <div class="form-group">
            <label for="image" class="lable">Tải ảnh sản phẩm</label>
            <input type="file" class="form-control-file" id="image" name="image" accept="image/png, image/jpeg" required>
            <p class="imgError"></p>
        </div>
        <div class="form-row">
            <div class="form-group col-md-9">
            {{#each type}}
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="typeId" id="{{this._id}}" value="{{this._id}}">
                    <label class="form-check-label" for="{{this._id}}">{{this.name}}</label>
                </div>
            {{/each}}
            </div>
            <div class="col-md-3">
                <button type="button" class="btn btn-light" data-toggle="modal" data-target="#addTypeModal">Thêm mới</button>
            </div>
        </div>
        <button type="submit" class="btn btn-success btn-block my-3">Đăng</button>
        
    </form>
    <div class="modal fade" id="addTypeModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addTypeModalLabel">Thêm loại sản phẩm</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="POST" name="addTypeForm" action="/detail/addType">
                        <div class="form-group">
                            <label for="nameType">Tên loại</label>
                            <input type="text" class="form-control" id="nameType" name="name" placeholder="Nhập tên loại mới">
                        </div>
                        <div class="form-group">
                            <label for="VATinput">Thuế giá trị gia tăng</label>
                            <input type="number" class="form-control" id="VATinput" name="VAT" placeholder="Nhập mức thuế">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-light" data-dismiss="modal">Huỷ</button>
                    <button type="submit" class="btn btn-primary">Lưu</a>
                </div>
            </div>
        </div>  
    </div>
</div>
